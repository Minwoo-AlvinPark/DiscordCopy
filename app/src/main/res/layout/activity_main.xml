<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="서울_인텔 인공지능 인재 양성 과정 2기"
        android:textColor="@android:color/black"
        android:textSize="20sp" />


    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#80808080"
        android:queryHint="검색하기"
        android:textColorHint="#000000" />

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/darker_gray"
        android:padding="16dp"
        android:text="확인해 주세요"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"
        android:padding="5dp"
        android:text="# 공지사항"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"
        android:padding="5dp"
        android:text="# Test"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonAsk"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/darker_gray"
        android:padding="16dp"
        android:text="무엇이든 물어보세요"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"
        android:padding="5dp"
        android:text="# 동기에게 물어봐"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonStudy"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/darker_gray"
        android:padding="16dp"
        android:text="열심히 교육받아요"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"
        android:padding="5dp"
        android:text="# 인공지능 과정"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"
        android:padding="5dp"
        android:text="# 앱 과정"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"
        android:padding="5dp"
        android:text="# 프로젝트 과정"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonConnect"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/darker_gray"
        android:padding="16dp"
        android:text="친해져요"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"
        android:padding="5dp"
        android:text="# 점심 추천해요"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"
        android:padding="5dp"
        android:text="# 오프더레코드"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"
        android:padding="5dp"
        android:text="# 정보 공유해요"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonStudyRoom"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/darker_gray"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:text="스터디실"
        android:textColor="@android:color/white" />


</LinearLayout>
